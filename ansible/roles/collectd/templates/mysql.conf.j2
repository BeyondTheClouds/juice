LoadPlugin mysql

# https://collectd.org/documentation/manpages/collectd.conf.5.shtml#plugin_mysql
<Plugin mysql>
	<Database mariadb>
		# Only dbmaster_node because we get informations about the cluster
		Host "{{ hostvars[inventory_hostname]['ansible_' + hostvars[inventory_hostname]['database_network']]['ipv4']['address'] }}"
		Port "3306"
		User "root"
		Password "my-secret-pw"
		WsrepStats true
	</Database>
</Plugin>
